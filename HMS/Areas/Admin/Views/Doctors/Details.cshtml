@model HMS.Models.ViewModel.DoctorsViewModel

@using HMS.Extensions



<br /><br />

<h2 class="text-info">Детали за доктор</h2><br />



<div class="p-4 border rounded row">
    <div class="col-md-7">
        <div class="form-group row">
            <div class="col-md-5">
                <p>Име: </p>
            </div>
            <div class="col-md-7">
                <p>@Model.Doctors.Name</p>
            </div>
        </div>
        <hr style="border: 0; height: 1px; background-image: -webkit-linear-gradient(left, #f0f0f0, #6CC3D5, #f0f0f0); background-image: -moz-linear-gradient(left, #f0f0f0, #6CC3D5, #f0f0f0); background-image: -ms-linear-gradient(left, #f0f0f0, #6CC3D5, #f0f0f0); background-image: -o-linear-gradient(left, #f0f0f0, #6CC3D5, #f0f0f0);">

        <div class="form-group row">
            <div class="col-md-5">
                <p>Тел. бр:</p>
            </div>
            <div class="col-md-7">
                <p>@Model.Doctors.PhoneNumber</p>
            </div>
        </div>
        <hr style="border: 0; height: 1px; background-image: -webkit-linear-gradient(left, #f0f0f0, #6CC3D5, #f0f0f0); background-image: -moz-linear-gradient(left, #f0f0f0, #6CC3D5, #f0f0f0); background-image: -ms-linear-gradient(left, #f0f0f0, #6CC3D5, #f0f0f0); background-image: -o-linear-gradient(left, #f0f0f0, #6CC3D5, #f0f0f0);">

        <div class="form-group row">
            <div class="col-md-5">
                <p>Специјалност: </p>
            </div>
            <div class="col-md-7">
                <p>@Model.Doctors.Specialties.Name</p>
            </div>
        </div>
        <hr style="border: 0; height: 1px; background-image: -webkit-linear-gradient(left, #f0f0f0, #6CC3D5, #f0f0f0); background-image: -moz-linear-gradient(left, #f0f0f0, #6CC3D5, #f0f0f0); background-image: -ms-linear-gradient(left, #f0f0f0, #6CC3D5, #f0f0f0); background-image: -o-linear-gradient(left, #f0f0f0, #6CC3D5, #f0f0f0);">

        <div class="form-group row">
            <div class="col-md-5">
                <p>Субспецијалност: </p>
            </div>
            <div class="col-md-7">
                <p>@Model.Doctors.SubSpecialties.Name</p>
            </div>
        </div>
        <hr style="border: 0; height: 1px; background-image: -webkit-linear-gradient(left, #f0f0f0, #6CC3D5, #f0f0f0); background-image: -moz-linear-gradient(left, #f0f0f0, #6CC3D5, #f0f0f0); background-image: -ms-linear-gradient(left, #f0f0f0, #6CC3D5, #f0f0f0); background-image: -o-linear-gradient(left, #f0f0f0, #6CC3D5, #f0f0f0);">

        <div class="form-group row">
            <div class="col-md-5">
                <p>Фокус: </p>
            </div>
            <div class="col-md-7">
                <p>@Model.Doctors.Focus</p>
            </div>
        </div>
        <hr style="border: 0; height: 1px; background-image: -webkit-linear-gradient(left, #f0f0f0, #6CC3D5, #f0f0f0); background-image: -moz-linear-gradient(left, #f0f0f0, #6CC3D5, #f0f0f0); background-image: -ms-linear-gradient(left, #f0f0f0, #6CC3D5, #f0f0f0); background-image: -o-linear-gradient(left, #f0f0f0, #6CC3D5, #f0f0f0);">

        <div class="form-group row">
            <div class="col-md-5">
                <p>Прима пациенти: </p>
            </div>
            <div class="col-md-7">
                @if (Model.Doctors.Available == true)
                {
                    <i class="fas fa-check"></i>
                }
                else
                {
                    <i class="fas fa-times"></i>
                }
            </div>
        </div>
    </div>


    <div class="col-md-4 mx-auto d-block">
        <img src="@Model.Doctors.Image" width="100%" class="rounded-circle border border-info" style="max-width: 250px;"/>
        <br /> <br />
    </div>





    <br />

    <div class="form-group">

        <a asp-action="Edit" class="btn btn-primary" asp-route-id="@Model.Doctors.Id">Уреди доктор</a>

        <a asp-action="Index" class="btn btn-success">Назад кон листа</a>

    </div>

</div>