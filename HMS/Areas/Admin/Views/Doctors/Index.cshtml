@model IEnumerable<HMS.Models.Doctors>
@{
    ViewData["Title"] = "Index";
}

<br /><br />

<div class="row">
    <div class="col-6">
        <h2 class="text-info">Листа на доктори</h2>
    </div>
    <div class="col-6 text-right">
        <a asp-action="Create" class="btn btn-info"><i class="fas fa-plus"></i>&nbsp; Додади доктор </a>
    </div>
</div>

<br />
<div>
    <table id="table" class="table table-active table-bordered table-hover">
        <tr class="thead-dark">
            <th>
                @Html.DisplayNameFor(m => m.Name)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Available)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Specialties)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.SubSpecialties)
            </th>
            <th></th>
            
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(m => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(m => item.PhoneNumber)
                </td>
                <td>
                    @if (item.Available == true)
                    {
                        <i class="fas fa-check"></i>
                    }
                    else
                    {
                        <i class="fas fa-times"></i>
                    }
                </td>
                <td>
                    @Html.DisplayFor(m => item.Specialties.Name)
                </td>
                <td>
                    @if (!item.SubSpecialties.Name.Equals("--None--"))
                    {
                        @Html.DisplayFor(m => item.SubSpecialties.Name)
                    }
                </td>
                
                    <partial name="_TableButtonPartial" model="item.Id" />
                
            </tr>

        }
    </table>
</div>

