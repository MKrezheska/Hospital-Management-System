@model HMS.Models.Specialties
@{
    ViewData["Title"] = "Delete";
    ViewData["Title"] = "Delete";
}

<style>
    .modal-info .modal-header, .modal-info .modal-footer {
        border-color: #FF7851;
        color: white;
    }

    .modal-footer {
        padding: 15px;
        text-align: right;
        color: white;
        border-top: 1px solid #78C2AD;
    }

    .bg-aqua-active, .modal-info .modal-header, .modal-info .modal-footer {
        background-color: darksalmon !important;
    }

    .modal-info .modal-body {
        background-color: #FF7851 !important;
        color: white;
        border: 1px solid gray;
    }

    #delete > div > div > div.modal-footer.form-group {
        margin-bottom: 0px;
    }

    #myModalLabel {
        color: white;
        text-align: center;
    }
</style>

<br />
<h2 class="text-info">Избриши специјалност</h2>

<form method="post" asp-action="Delete">
    <div class="p-4 border rounded">
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Name">Име</label>
            </div>
            <div class="col-5">
                <input asp-for="Name" disabled class="form-control" />
            </div>
        </div>
        <br />
        <div class="form-group">
            @*<input type="submit" class="btn btn-danger" asp-route-id="@Model.Id" value="Избриши" />*@
            <input type="button" class="btn btn-danger" data-toggle="modal" data-target="#delete" value="Избриши">
            <a asp-action="Index" class="btn btn-success">Назад кон листа</a>
        </div>
        <div class="modal modal-info fade" id="delete" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title text-center" id="myModalLabel">Потврдете го бришењето</h4>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>

                    </div>


                    <div class="modal-body">
                        <p class="text-center">
                            Дали сте сигурни дека сакате да ја избришете специјалност од листата?
                        </p>

                    </div>
                    <div class="modal-footer form-group">
                        <input type="submit" class="btn btn-danger" value="Да" />
                        <a asp-action="Index" class="btn btn-danger">Не</a>
                    </div>

                </div>
            </div>
        </div>
    </div>
</form>



