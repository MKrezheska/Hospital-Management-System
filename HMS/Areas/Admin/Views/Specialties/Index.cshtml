        }

        figure.snip1471 h3 {
            font-size: 1em;
            top: 0;
            font-weight: 500;
        }

        figure.snip1471 .icons {
            opacity: 0;
            -webkit-transform: translateY(-150%);
            transform: translateY(-150%);
        }

            figure.snip1471 .icons a {
                color: #ffffff;
                text-decoration: none;
                padding: 5px;
                font-size: 1.6em;
                opacity: 0.6;
            }

