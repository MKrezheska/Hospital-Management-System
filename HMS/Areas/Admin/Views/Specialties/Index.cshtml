    .snip1489 {
        position: relative;
        font-size: 13px;
        color: #e6e6e6;
        width: 35px;
        margin: 1px;
        height: 35px;
        line-height: 35px;
        display: inline-block;
        text-align: center;
        -webkit-perspective: 50em;
        perspective: 50em;
        text-decoration: none;
        -webkit-box-sizing: border-box;
        box-sizing: border-box;
    }

        .snip1489:after {
            position: absolute;
            top: 0;
            bottom: 0;
            left: 0;
            right: 0;
            border: 2px solid #e6e6e6;
            content: '';
            z-index: -1;
            border-radius: 50%;
        }

        .snip1489:before {
            color: #fff;
        }

        .snip1489:before,
        .snip1489:after {
            -webkit-transition: all 0.45s ease-in-out;
            transition: all 0.45s ease-in-out;
        }

        .snip1489:hover,
        .snip1489:active,
        .snip1489.hover {
            color: #c0392b;
        }

            .snip1489:hover:after,
            .snip1489:active:after,
            .snip1489.hover:after {
                border-color: transparent #28bea8;
                -webkit-transform: rotate(360deg);
                transform: rotate(360deg);
            }


    ul.filters > li.active::after {
        -webkit-transition: all 0.45s ease-in-out;
        transition: all 0.45s ease-in-out;
        border-color: transparent #28bea8;
        -webkit-transform: rotate(360deg);
        transform: rotate(360deg);
    }



    .snip1160 {
        position: relative;
        font-size: 25px;
        color: #ffffff;
        width: 50px;
        margin: 20;
        height: 50px;
        line-height: 50px;
        display: inline-block;
        text-align: center;
        border-radius: 50%;
        -webkit-transition: all 0.3s;
        transition: all 0.3s;
        background-color: #acdcd5;
    }

        .snip1160 * {
            -webkit-box-sizing: content-box;
            box-sizing: content-box;
        }

        .snip1160:before,
        .snip1160:after {
            -webkit-transition: all 0.3s;
            transition: all 0.3s;
        }

        .snip1160:before {
            color: #000000;
        }

        .snip1160:after {
            position: absolute;
            top: 0;
            left: 0;
            height: 100%;
            width: 100%;
            border: 1px solid #000000;
            content: '';
            z-index: -1;
            border-radius: 50%;
            box-sizing: border-box;
        }




        .snip1160.green:before {
            color: #78c2ad;
            text-decoration: none;
        }

        .snip1160.green:after {
            border-color: #78c2ad;
        }



        .snip1160:hover,
        .snip1160 .hover {
            text-decoration: none;
            -webkit-transform: scale(0.9);
            transform: scale(0.9);
        }

            .snip1160:hover:after,
            .snip1160 .hover:after {
                text-decoration: none;
                opacity: 0.5;
                border-width: 8px;
                -webkit-transform: scale(1.2);
                transform: scale(1.2);
            }







