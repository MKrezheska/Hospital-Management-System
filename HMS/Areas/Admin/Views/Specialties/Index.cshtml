                }

        figure.snip1471:hover img,
        figure.snip1471.hover img {
            opacity: 0.3;
            -webkit-filter: grayscale(100%);
            filter: grayscale(100%);
        }

        figure.snip1471:hover figcaption h3,
        figure.snip1471.hover figcaption h3 {
            -webkit-transform: translateY(-150%);
            transform: translateY(-150%);
