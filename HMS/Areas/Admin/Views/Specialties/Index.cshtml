    figure.snip1471 {
        font-family: 'Raleway', Arial, sans-serif;
        color: #fff;
        position: relative;
        overflow: hidden;
        margin: 10px;
        min-width: 230px;
        max-width: 315px;
        max-height: 230px;
        width: 100%;
        background: #000000;
        color: #ffffff;
    }

