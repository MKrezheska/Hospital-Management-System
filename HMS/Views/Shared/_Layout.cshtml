@using Microsoft.AspNetCore.Http
@using HMS.Extensions
@using HMS.Utility

@inject IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HMS</title>

    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/jquery-ui.css" />
        <link rel="stylesheet" href="~/css/jquery.timepicker.css" />
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.1.0/css/all.css" integrity="sha384-lKuwvrZot6UHsBSfcMvOkWwlCMgc0TaWr+30HWe3a4ltaBwTZhyTEggF5tJv8tbt" crossorigin="anonymous">
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/jquery-ui.css" />
        <link rel="stylesheet" href="~/css/jquery.timepicker.css" />
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.1.0/css/all.css" integrity="sha384-lKuwvrZot6UHsBSfcMvOkWwlCMgc0TaWr+30HWe3a4ltaBwTZhyTEggF5tJv8tbt" crossorigin="anonymous">
    </environment>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">

        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <!--<i class="fas fa-user-md navbar-brand"></i>-->
        <a asp-area="Customer" asp-controller="Home" asp-action="Index"><img src="~/images/HMSM -logo.png" class="img-responsive mr-4" width="90" height="90" /></a>



        <div class="collapse navbar-collapse" id="navbarColor01">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item"><a class="nav-link" asp-area="Customer" asp-controller="Home" asp-action="Index">Почетна</a></li>

                @if (User.IsInRole(SD.SuperAdminEndUser))
                {
                    <li class="nav-item"><a class="nav-link" asp-area="Admin" asp-controller="Specialties" asp-action="Index">Специјалности</a></li>
                    <li class="nav-item"><a class="nav-link" asp-area="Admin" asp-controller="SubSpecialties" asp-action="Index">Субспецијалности</a></li>
                    <li class="nav-item"><a class="nav-link" asp-area="Admin" asp-controller="Doctors" asp-action="Index">Доктори</a></li>
                    <li class="nav-item"><a class="nav-link" asp-area="Admin" asp-controller="AdminUsers" asp-action="Index">Администратори</a></li>
                }
                @if (User.IsInRole(SD.SuperAdminEndUser) || User.IsInRole(SD.AdminEndUser))
                {
                    <li class="nav-item"><a class="nav-link" asp-area="Admin" asp-controller="Appointments" asp-action="Index">Термини</a></li>

                }

                @if (HttpContextAccessor.HttpContext.Session.Get<List<int>>("ssShoppingCart") != null)
                {
                    <li style="color:white">
                        <a asp-area="Customer" asp-controller="ShoppingCart" asp-action="Index" class="nav-link">
                            <i class="fas fa-notes-medical"></i>
                            @{
                                var count = HttpContextAccessor.HttpContext.Session.Get<List<int>>("ssShoppingCart").Count;
                            }
                            (@count)
                        </a>

                    </li>

                }
                else
                {
                    <li style="color:white">
                        <a asp-area="Customer" asp-controller="ShoppingCart" asp-action="Index" class="nav-link">
                            <i class="fas fa-notes-medical"></i>

                            (0)
                        </a>

                    </li>

                }
            </ul>
        </div>
        <div>
            <partial name="_LoginPartial" />
        </div>
    </nav>






    <partial name="_CookieConsentPartial" />

    <footer class="container body-content site-footer">
        @RenderBody()
        <div class="footer">
            <div id="button"></div>
            <div id="container">
                <div id="cont">
                    <div class="wrapper">
                        <section class="columns mb-0">
                            <div class="column">
                                <ul style="list-style: none;">
                                    <li>
                                        Локација
                                        <i class="fas fa-map-marker-alt"></i>
                                    </li>
                                    <li>
                                        <p>Даме Груев 7, Скопје</p>
                                    </li>
                                </ul>
                            </div>

                            <div class="column">
                                <ul style="list-style: none;">
                                    <li>
                                        Телефон
                                        <i class="fas fa-phone"></i>
                                    </li>
                                    <li>
                                        <p>078444222</p>

                                    </li>
                                </ul>
                            </div>

                            <div class="column">
                                <ul style="list-style: none;">
                                    <li>
                                        Емаил
                                        <i class="fas fa-envelope-square"></i>
                                    </li>
                                    <li>
                                        <p>hmsm@outlook.com</p>
                                    </li>
                                </ul>
                            </div>
                        </section>
                        <div class="text-center ">
                            <p>© 2019 HMSM</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        
        

    </footer>

    <style>
    

    .footer #button{
	width:35px;
	height:35px;
	border: #b9f0cd 12px solid;
	border-radius:35px;
	margin:0 auto;
	position:relative;
	-webkit-transition: all 1s ease;
    -moz-transition: all 1s ease;
    -o-transition: all 1s ease;
    -ms-transition: all 1s ease;
    transition: all 1s ease;
    }
    .footer #button:hover {
            width: 35px;
            height: 35px;
            border: #b9f0cd 12px solid;
            -webkit-transition: all 1s ease;
            -moz-transition: all 1s ease;
            -o-transition: all 1s ease;
            -ms-transition: all 1s ease;
            transition: all 1s ease;
            position: relative;
    }
    .footer {
	bottom:0;
	left:0;
	position:fixed;
    width: 100%;
    height: 2em;
    overflow:hidden;
    margin:0 auto;
	-webkit-transition: all 1s ease;
    -moz-transition: all 1s ease;
    -o-transition: all 1s ease;
    -ms-transition: all 1s ease;
    transition: all 1s ease;
	z-index:999;
    }
    .footer:hover {
	-webkit-transition: all 1s ease;
    -moz-transition: all 1s ease;
    -o-transition: all 1s ease;
    -ms-transition: all 1s ease;
    transition: all 1s ease;
	height: 10em;
    }
    .footer #container {
            margin-top: 5px;
            width: 100%;
            height: 100%;
            position: relative;
            top: 0;
            left: 0;
            background: #b9f0cd;
        }
        /*.footer #cont {
            position: relative;
            top: -45px;
            right: 190px;
            width: 150px;
            height: auto;
            margin: 0 auto;
        }*/
    #cont .wrapper {
            padding: 5px;
            max-width: 960px;
            width: 95%;
            margin: 0px auto;
    }
   
    header {
            padding: 0 15px;
    }

        .columns {
            display: flex;
            flex-flow: row wrap;
            justify-content: center;
            margin: 5px 0;
        }

        .column {
            flex: 1;
            margin: 2px;
            padding: 10px;
            padding-left: 70px;
            padding-bottom: 5px;
        }
         .columns .column:first-child

        {
            margin-left: 0;


        }

            .columns .column:last-child{
            margin-right: 0;
        }


        media screen and (max-width: 980px) {
            .columns .column

        {
            margin-bottom: 5px;
            flex-basis: 40%;
            &:nth-last-child(2)

        {
            margin-right: 0;
        }

        &:last-child {
            flex-basis: 100%;
            margin: 0;
        }

        }
        }

        media screen and (max-width: 680px) {
            .columns .column

        {
            flex-basis: 100%;
            margin: 0 0 5px 0;
        }
        }
        ::-webkit-scrollbar {
            width: 12px;
        }
        ::-webkit-scrollbar-thumb:hover{
            background-color: #d7dfd9;
        }
        ::-webkit-scrollbar-track {
            -webkit-box-shadow: inset 0 0 6px rgba(0,0,0,0.3);
            border-radius: 10px;
        }

        ::-webkit-scrollbar-thumb {
            border-radius: 10px;
            -webkit-box-shadow: inset 0 0 6px rgba(0,0,0,0.5);
        }
    </style>
    <environment include="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        <script src="~/js/jquery-ui.js" asp-append-version="true"></script>
        <script src="~/js/jquery.timepicker.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        <script src="~/js/jquery-ui.js" asp-append-version="true"></script>
        <script src="~/js/jquery.timepicker.js" asp-append-version="true"></script>
    </environment>

    @RenderSection("Scripts", required: false)
</body>
</html>
